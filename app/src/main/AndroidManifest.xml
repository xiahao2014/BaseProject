<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.summerhao.bs" >

    <!-- 写入扩展存储，向扩展卡写入数据-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- 访问网络 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 访问账户Gmail列表权限 -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <!-- 发送短信验证码的权限 -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 调用照相机相关权限 -->
    <uses-permission android:name="android.permission.CAMERA" />


    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--************************程序主界面*****************************-->
        <activity android:name=".activity.MainActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>


        <!--************************UI封装*****************************-->
        <activity android:name=".activity.ui_common.UIActivity">
        </activity>

        <!--策划菜单栏-->
        <activity
            android:name=".activity.ui_common.drawerlayout.DrawerLayoutActivity"
            android:label="@string/DrawerLayoutActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.summerhao.android.UI_COMMON" />
            </intent-filter>
        </activity>
        <!--引导界面实现-->
        <activity android:name=".activity.ui_common.guide.GuideActivity"
            android:label="@string/GuideActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.summerhao.android.UI_COMMON" />
            </intent-filter>
        </activity>
        <!--小说翻页效果-->
        <activity android:name=".activity.ui_common.bookfip.BookFipActivity"
            android:label="@string/BookFipActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.summerhao.android.UI_COMMON" />
            </intent-filter>

        </activity>

        <!--登录效果-->
        <activity android:name=".activity.ui_common.login.LoginActivity"
            android:label="@string/LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.summerhao.android.UI_COMMON" />
            </intent-filter>
        </activity>
        <!--注册-->
        <activity android:name=".activity.ui_common.login.RegisterActivity">
        </activity>
        <!--忘记密码-->
        <activity android:name=".activity.ui_common.login.ForgotPassActivity">
        </activity>


        <!--************************自定义控件封装*****************************-->
        <activity android:name=".activity.view_common.ViewActivity">
        </activity>
        <!--List下拉刷新-->
        <activity android:name=".activity.view_common.refreshlistview.RefreshListviewActivity"
            android:label="@string/RefreshListview">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.summerhao.android.VIEW_COMMON" />
            </intent-filter>
        </activity>


        <!--************************功能性封装*****************************-->
        <activity android:name=".activity.function_common.FunctionActivity">
        </activity>
        <!--拍照、选择照片-->
        <activity android:name=".activity.function_common.camera.CameraPictureActivity"
            android:label="@string/CameraPictureActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.summerhao.android.FUNCTION_COMMON" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.function_common.zxing.CaptureActivity"
            android:label="@string/CaptureActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.summerhao.android.FUNCTION_COMMON" />
            </intent-filter>
        </activity>


        <!--************************第三方框架封装*****************************-->
        <activity android:name=".activity.frame_common.FrameActivity">

        </activity>
        <!--Okhttp使用-->
        <activity android:name=".activity.frame_common.okhttp.OkhttpUseActivity"
            android:label="@string/OkhttpUseActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.summerhao.android.FRAME_COMMON" />
            </intent-filter>
        </activity>
        <!--OrmLite使用-->
        <activity android:name=".activity.frame_common.ormlite.OrmLiteActivity"
            android:label="@string/OrmLiteActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.summerhao.android.FRAME_COMMON" />
            </intent-filter>
        </activity>


    </application>


    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true" />



</manifest>
